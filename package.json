{
  "name": "shortlink-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "test:unit": "jest --watchAll=false --testPathIgnorePatterns='(__tests__|e2e)'",
    "test:integration": "jest --watchAll=false --testPathPattern='__tests__/integration'",
    "test:smoke": "jest --watchAll=false --testPathPattern='(smoke|__tests__/smoke)'",
    "test:visual": "jest --watchAll=false --testMatch='**/*.visual.test.{ts,tsx}'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "msw:init": "msw init public/ --save",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:coverage:unit": "jest --coverage --watchAll=false --testPathIgnorePatterns='(__tests__|e2e)'",
    "test:coverage:open": "jest --coverage --watchAll=false && (open coverage/lcov-report/index.html || echo 'Open coverage/lcov-report/index.html to view coverage')",
    "test:ci": "jest --watchAll=false --coverage --maxWorkers=2",
    "test:all": "npm run test:ci"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.3.4",
    "antd": "^5.21.0",
    "axios": "^1.7.2",
    "dayjs": "^1.11.13",
    "js-cookie": "^3.0.5",
    "next": "^14.2.5",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.5",
    "recharts": "^2.12.7",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.14",
    "@types/jest-image-snapshot": "^6.1.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "msw": "^2.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  }
}
